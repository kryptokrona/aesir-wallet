{
	"appId": "com.electron.yggdrasil",
	"name": "yggdrasil",
	"productName": "Yggdrasil",
	"author": "Kryptokrona Developers",
	"version": "1.0.0",
	"private": true,
	"description": "a wallet for Kryptokrona",
	"repository": "https://github.com/Swepool/yggdrasil",
	"main": "src/electron.cjs",
	"type": "module",
	"npmRebuild": false,
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "vite dev",
		"dev:electron": "electron src/electron.cjs",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"postinstall": "patch-package",
		"build:svelte": "vite build",
		"build:electron": "electron-builder -mwl --config build.config.json",
		"build:mac-arm": "cross-env NODE_ENV=production vite build && electron-builder --mac --arm64 --config build.config.json",
		"build:mac-intel": "cross-env NODE_ENV=production vite build && electron-builder --mac --x64 --config build.config.json",
		"publish:mac-arm": "cross-env NODE_ENV=production vite build && electron-builder --mac --arm64 --config build.config.json -p always",
		"publish:mac-intel": "cross-env NODE_ENV=production vite build && electron-builder --mac --x64 --config build.config.json -p always"
	},
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "swepool",
				"repo": "yggdrasil"
			}
		],
		"mac": {
			"asarUnpack": "./node_modules/node-notifier/vendor/**"
		}
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"@commonify/lowdb": "^3.0.0",
		"cross-fetch": "^3.1.5",
		"electron-context-menu": "^3.3.0",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.1.0",
		"electron-store": "^8.1.0",
		"electron-updater": "^5.3.0",
		"electron-window-state": "^5.0.3",
		"file-saver": "^2.0.5",
		"keytar": "^7.9.0",
		"kryptokrona-crypto": "^1.0.1",
		"kryptokrona-wallet-backend-js": "^2.4.2",
		"node-notifier": "^10.0.1",
		"patch-package": "^6.5.0",
		"sound-play": "^1.1.0",
		"svelte-french-toast": "^1.0.3",
		"svelte-loading-spinners": "^0.3.4"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "1.0.0-next.43",
		"@sveltejs/kit": "1.0.0-next.504",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.2.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"electron": "^21.0.0",
		"electron-builder": "^23.1.0",
		"electron-connect": "^0.6.3",
		"electron-packager": "^16.0.0",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"sass": "^1.56.0",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.5",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.3"
	},
	"overrides": {
		"electron": {
			"got": "^12.5.1"
		}
	}
}
